<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >



    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:minWidth="300dp"
        android:minHeight="120dp"

        android:maxWidth="350dp"
        android:maxHeight="200dp"

        android:src="@drawable/group_23"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="35dp"
        android:hint="   user name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="1dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_logo"
        android:drawableLeft="@drawable/username"
        android:drawableStart="@drawable/username"
        />


    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="35dp"
        android:hint="   password"
        android:inputType="textWebPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_username"
        android:drawableLeft="@drawable/password"
        android:drawableStart="@drawable/password"
        />
    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        app:layout_constraintTop_toTopOf="@id/et_password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"


        />


    <ImageButton
        android:id="@+id/butn_sign_in"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/tv_forget"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/rounded_button"
        android:src="@drawable/login_btn"
        android:onClick="btn_signIn"
        android:scaleType="fitXY"
        android:minWidth="150dp"
        android:minHeight="25dp"
        />
    <ImageButton
        android:id="@+id/butn_sign_up"
        android:layout_width="300dp"
        android:layout_height="70dp"
       app:layout_constraintTop_toBottomOf="@id/butn_sign_in"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/rounded_button"
        android:onClick="sign_up"
        android:layout_marginBottom="30dp"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textColor="#fff"
        android:src="@drawable/sent_request"
        android:scaleType="fitXY"
        />
    </android.support.constraint.ConstraintLayout>
</ScrollView>