<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/room_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="19sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/single_room_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="19sp"
            android:text="1"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/room_word"
            />
        <!--********Start************ Price : 15 L.E/Hour **********-->
        <TextView
            android:id="@+id/price_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/room_word"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:text="Price : "
            android:textColor="#000"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/room_hour_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/room_word"
            app:layout_constraintStart_toEndOf="@id/price_word"
            android:text="15"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/room_word"
            app:layout_constraintStart_toEndOf="@id/room_hour_price"
            android:text="L.E/Hour"
            android:textColor="#000"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textSize="15sp"
            />
        <!--********End************ Price : 15 L.E/Hour **********-->
        <!--********Start************ 60 Chair - 2 Table  **********-->
        <TextView
            android:id="@+id/num_of_chair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/price_word"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:text="60"
            />
        <TextView
            android:id="@+id/word_chair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/price_word"
            app:layout_constraintStart_toEndOf="@id/num_of_chair"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="Chair - "
            />
        <TextView
            android:id="@+id/num_of_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/price_word"
            app:layout_constraintStart_toEndOf="@id/word_chair"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="2"
            />
        <TextView
            android:id="@+id/word_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/price_word"
            app:layout_constraintStart_toEndOf="@id/num_of_table"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="Table"
            />
        <!--********End************ 60 Chair - 2 Table  **********-->

        <Button
            android:id="@+id/BBtn_booking"
            android:layout_width="80dp"
            android:layout_height="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/num_of_chair"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="#65bf7e"
            android:text="Booking"
            android:textColor="#ffffff"
            android:layout_marginRight="20dp"
            />
    <ImageView
        android:id="@+id/wifi_icon"
        android:layout_width="18dp"
        android:layout_height="15dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/wifi_icon"
        app:layout_constraintTop_toTopOf="@id/BBtn_booking"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />



</android.support.constraint.ConstraintLayout>